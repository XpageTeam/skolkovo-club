.popup#call
	.form
		.form__title Преобразовать в компанию 
		.form__text Введите ИНН юридического лица (10 цифр) или ИНН индивидуального предпринимателя (12 цифр)
		form(action="#")
			.form__inputs
				.form__inputs.form__inputs--2
					.form__inputs-input.form__inputs-input--2
						.default-input
							input.default-input__input(type="text" placeholder="" value="")
							label.default-input__label Введите ИНН
							.default-input__error
								.error-text
									<!-- текст ошибки -->
				
			.form__submit
				.form__submit-btn
					input.default-btn.btn(type="submit" value="Преобразовать")
					


.popup#request
	.form
		.form__title Не смогли записаться?
		form(action="#")
			.form__inputs
				.form__inputs.form__inputs--2
					.form__inputs-input
						.default-input
							input.default-input__input(type="text" placeholder="Николай Владимирович Аношкин" value="Николай Владимирович Аношкин")
							label.default-input__label Имя
							.default-input__error
								.error-text
									<!-- текст ошибки -->
					.form__inputs-input
						.default-input
							input.default-input__input(type="text" placeholder="Николай Владимирович Аношкин" value="Николай Владимирович Аношкин")
							label.default-input__label Фамилия
							.default-input__error
								.error-text
									<!-- текст ошибки -->
					.form__inputs-input
						.default-input
							input.default-input__input(type="email" pattern="[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{1,63}$" inputmode="email" placeholder="mail@yandex.ru")
							label.default-input__label E-mail
							.default-input__error
								.error-text
									<!-- текст ошибки -->
					.form__inputs-input
						.default-input
							input.default-input__input(type="tel" inputmode="tel" pattern='\\+7\\s\\([0-9]{3}\\)\\s[0-9]{3}-[0-9]{2}-[0-9]{2}' placeholder="+7 (900) 000-00-00")
							label.default-input__label Tелефон
							.default-input__error
								.error-text
									<!-- текст ошибки -->
					.form__inputs-input.form__inputs-input--2
						.default-input
							textarea.default-input__input.default-input__input--textarea
							label.default-input__label Описание проблемы
					.form__inputs-input.form__inputs-input--2
						.default-input
							input.default-input__input.default-input__input--file(type="file" name="file" accept="Docx, exсel, pdf, jpg, png" id="price-file")
							.default-input__input-filetext
								input.default-input__input(type="text" readonly="" placeholder="jpg, pdf, png")
								label.default-input__label-file(for="price-file")
							label.default-input__label Документ
			.form__submit
				.form__submit-btn
					input.default-btn.btn(type="submit" value="Отправить")
				.form__submit-text Нажимая на кнопку отправки сообщения, я соглашаюсь на  
					a(href="#") обработку моих персональных данных

