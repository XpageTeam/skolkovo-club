.checkbox
	position: relative

	&__input
		position: absolute 0 * * 0
		opacity: 0
		pointer-events: none

		&:checked

			~ label

				&:after
					opacity: 1

	&__label
		cursor: pointer
		display: flex
		align-items: center
		position: relative
		user-select: none
		font-size: 14px

		&:before, &:after
			content: ""
			display: inline-block

		&:before
			flex: none
			background: #fff
			margin: 0 30px 0 0
			size: 25px

		&:after
			border: 1px solid var(--second-color)
			border-top: none
			border-left: none
			size: 5px 10px
			transform: rotateZ(45deg)
			position: absolute 7px * * 12px
			transition: opacity .1s ease
			opacity: 0
